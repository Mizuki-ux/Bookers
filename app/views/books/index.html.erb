
<head>
<%= stylesheet_link_tag 'new.css' %>
</head>
<h1>Books</h1>
<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td class="text">
      <%= book.title %>
      </td>
      <td class="text">
      <%= book.body %>
      </td>
      <td class="text">
  <%= link_to "Show", book_path(book) %>
      </td>
      <td class="text">
  <%= link_to "Edit", edit_book_path(book) %>
      </td>
      <td class="text">
    <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure？' } %>
      </td>
    </tr>
  </tbody>
  <% end %>
 </table>




<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books',　method: :post do |f| %>
<div class="errors">
  <% if @book.errors.any? %>
   <h2 class="error"> 
 <%= @book.errors.count %>errors prohibited this book from being saved:
 </h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

  <h4>Title</h4>
  <div class="nil"> 
  <%= f.text_field :title %>
  </div>

  <h4>Body</h4>
  <div class="nil"> 
  <%= f.text_area :body %>
  </div>
  
  <div class="nil"> 
  <%= f.submit "Create Book" %>
  </div>
<% end %>





